{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
}